@model ArticleViewModel
@{
	ViewData["Title"] = "Article Editor";

}

<div class="container">
	<div class="card-header">
		<h1>Article Editor</h1>
	</div>

	<div class="card-body">
		<form asp-action="Save" method="post" class="mb-2">
			<div>
				<label>Title</label><br />
				<input type="text" name="Title" value="@Model.Title" style="width:400px;" />
			</div>
			<div>
				<label>Body</label><br />
				<textarea name="Body" rows="10" cols="60">@Model.Body</textarea>
			</div>
			<div style="margin-top:10px;">
				<button type="submit" class="btn btn-primary">Save</button>
			</div>
		</form>
		<form asp-action="Undo" method="post" class="mb-2">
			<button type="submit" class="btn btn-secondary">Undo</button>
		</form>
		<form asp-action="Redo" method="post" class="mb-2">
			<button type="submit" class="btn btn-secondary">Redo</button>
		</form>
	</div>
	<div class="card-footer">

	</div>
</div>